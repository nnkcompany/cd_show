<h1>購入確認</h1>

<% sum = 0 %>
<% total_sum = 0 %>
<% current_user.cart.product_carts.each do |product_cart| %>

<hr>

<div class="">
	<table class="">
	    <thead>
		  <tr>
		  	<th colspan="2">商品名</th>
		  	<th>商品の値段</th>
		  	<th>購入個数</th>
		  	<th>商品の合計金額</th>
		  </tr>
		</thead>
		<tbody>
		  <tr>
		  	<td>
		  		<ul class="text-left"><%= attachment_image_tag product_cart.product, :cd_image, :fill, 150, 150 %>
		  		</ul>
			</td>
		  	<td class="order_pro">
				<div class="col-ms-12">
				<%= product_cart.product.cd_name %>
				</div>

				<div class="col-ms-12">
				<%= product_cart.product.artist_name %>
				</div>
			</td>

			<td>
				<div class="col-ms-12">
				<!-- 商品の値段 -->
				<%= product_cart.product.price %>円
				</div>
			</td>
			<td>
				<div class="col-ms-12">
				<!-- 商品個数 -->
				購入個数：<%= product_cart.quantity %>
				</div>
			</td>
			<td>
				<div class="col-ms-12">
				<!-- 商品個数 -->
				商品の合計金額：<%= product_cart.quantity * product_cart.product.price %>
				<% product_total = product_cart.quantity * product_cart.product.price %>
				</div>
			</td>
		  </tr>
		</tbody>
	</table>
</div>

<% total_sum += product_total %>
<hr>
<% end %>

<div class="col-ms-12">
送料：1000円
</div>
<div class="col-ms-12">
支払金額：<%= total_sum + 1000 %>円
</div>

<%= form_for @order do |f| %>
<%= f.text_field :last_name_kana, :value => current_user.last_name_kana %>
<%= f.text_field :first_name_kana, :value => current_user.first_name_kana %>


<%= f.text_field :last_name, :value => current_user.last_name %>
<%= f.text_field :first_name, :value => current_user.first_name %>

<%= f.submit "購入", class: "btn-sm btn btn-success" %>
<% end %>


