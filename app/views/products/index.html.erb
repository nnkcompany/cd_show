<div class="pro_header">
  <h1>新商品一覧</h1><br>
</div>

  <%= search_form_for @q do |f| %>
<div cladss="center-block"  style="
    margin-top: -55px; margin-left: 17px; " >

    <table>
      <tr>
        <th><%= f.label :artist_name, "アーティスト名から検索" %>&emsp;</th>
        <td><%= f.search_field :artist_name_or_artist_name_kana_or_artist_name_eng_cont %></td>
      </tr><br />

      <tr>
        <th><%= f.label :cd_name, "アルバム・シングル名から検索" %>&emsp;&emsp;</th>
        <td><%= f.search_field :cd_name_start %></td>
      </tr><br />

      <tr>
        <th><%= f.label :category, "ジャンルから検索" %></th>
        <td><%= f.search_field :category_start %></td>
      </tr><br />
    </table>

          <%= f.submit '検索' %>

</div>
<% end %>
<br>

<div>
  
  <div cladss="row">

 <% @products.each do |product| %>

    <div class="col-lg-3">
      <table class="ichiran" style="
        border: 1px solid #0f0f0f;
        width: 97%; margin: 0px 15px 20px; padding: 5px 5px 0px;" >
          <div class="cd_image_index" >
            <%= attachment_image_tag product, :cd_image, :fill, 100, 100, format: 'jpeg' %>
          </div>
        <tr class="index_tr" >
          <th class="th_tr">アーティスト&emsp;</th>
          <td class="th_tr"><span><%= product.artist_name .truncate(12) %></span></td>
            <% product.artist_name_eng .truncate(12) %>
        </tr>

        <tr class="index_tr">
          <th class="th_tr">アルバム・シングル名&emsp;</th>
          <td class="th_tr"><span><%= product.cd_name .truncate(12) %></span></td>
        </tr>

        <tr class="index_tr">
          <th class="th_tr">ジャンル&emsp;</th>
          <td class="th_tr"><span><%= product.category .truncate(12) %></span></td>
        </tr>

        <tr class="index_tr">
          <th class="th_tr">価格&emsp;</th>
          <td class="th_tr">¥ <span><%= product.price %></span></td>
        </tr>
      </table>

        <div class="index_show">
          <span><%=link_to "詳　細", product_path(product.id) %></span>
        </div>

    </div>
<% end %>
  </div>



<div cladss="center-block">
  <div class="col-lg-5"></div>
  <div class="col-lg-3">
    <%= paginate @products, class: "pagenate" %>
  </div>
  <div class="col-lg-4"></div>
</div>


</div>
